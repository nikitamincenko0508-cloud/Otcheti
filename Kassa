total_sum = 0

while True:
    try:
        price = int(input("Введите цену товара (или 0 для завершения): "))
        if price == 0:
            break
        elif price < 0:
            print("Ошибка цены")
            continue
        else:
            total_sum += price
    except ValueError:
        print("Некорректный ввод. Попробуйте еще раз.")

# Проверка на скидку
if total_sum > 1000:
    total_sum *= 0.9

print("Итого к оплате:", total_sum)
